from PIL import Image, ImageDraw

img_size = 400
img = Image.new("RGBA", (img_size, img_size), (255, 255, 255, 0))
draw = ImageDraw.Draw(img)

colors = ["#FF9999", "#FFCC66", "#99CCFF", "#FF9966", "#CC99FF", "#66CCCC", "#FF6666", "#CCFFCC"]
option_count = 6
arc = 360 / option_count

for i in range(option_count):
    start_angle = i * arc
    end_angle = start_angle + arc
    draw.pieslice([0,0,img_size,img_size], start_angle, end_angle, fill=colors[i % len(colors)])

img.save("wheel.png")